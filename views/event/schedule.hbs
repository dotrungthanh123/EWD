    <script>
        $(function () {
            $("#header").load("/sharedhtmls/header.html", function () {
                $('.mobile-nav-toggle').click(function () {
                    $('#navbar').toggleClass('navbar-mobile');
                });

                $('.dropdown > a').click(function (e) {
                    e.preventDefault();
                    $(this).next('ul').slideToggle();
                });
            });
            $("#footer").load("/sharedhtmls/footer.html");
        });

    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: ['interaction', 'dayGrid', 'timeGrid', 'list'],
            height: '100%',
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
            },
            defaultView: 'dayGridMonth',
            initialDate: new Date(),
            navLinks: false,
            editable: false,
            eventLimit: true,
            eventSources: [
                {
                    url: '/event/eventData',
                    color: 'red', // Set color of the event dot
                    textColor: 'white', // Set color of the text (not relevant for dots)
                    eventDisplay: 'dot' // Display events as dots
                }
            ]
        });

    calendar.render();
});


    </script>

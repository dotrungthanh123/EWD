<h1>Contribution List</h1>
<div class="row">
   <form class="col m5" action="/contribution/search" method="post">
      <input class="form-control" type="search" name="keyword"
      placeholder="Search by contribution name" required>
   </form>
</div>
<table class="table table-primary">
   <tr>
      <th>Contribution name</th>
      <th>Contribution description</th>
      <th>Contribution image</th>
      <th>Contribution docs</th>
      <th>Contribution category</th>
   </tr>
   {{#each contributionList }}
   <tr>
      <td>{{ name }}</td>
      <td>${{ description }}</td>
      <td>
         <img src="/images/{{ image }}" width="100" height="100">
      </td>
      <td>{{ docs }}</td>
      <td>{{ category.name }}</td>
   </tr>
   {{/each}}
</table>

<section class="about-section text-center" id="about">
   <div class="container">
      <div id='calendar'></div>
   </div>
</section>

<script>
   document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            initialDate: new Date(),
            headerToolbar: {
               left: 'prev,next today',
               center:'title',
               right: 'dayGridMonth, timeGridWeek, timeGridDay'
               } 
            eventSources: [
               {
                  url: '/event/eventData',
                  color: 'white',
                  textColor: 'black' 
               }
            
            ]
      });
      calendar.render();
   });
</script>